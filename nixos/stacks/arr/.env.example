# arr-suite Environment Configuration
# Copy this to .env and fill in your values
# IMPORTANT: Never commit .env to git - it contains secrets!
#
# For persistent setup, store .env on NFS:
#   tower.tap:/mnt/user/infrastructure/docker-data/arr/.env

# User/Group Configuration
# Find your PUID and PGID by running: id
PUID=1000
PGID=1000

# Timezone - See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/Toronto

# Domain for Traefik reverse proxy (subdomain routing)
# Requires DNS wildcard entry: *.arr.tap -> your_host_ip
DOMAIN=arr.tap

# AirVPN Configuration
VPN_TYPE=wireguard

# Wireguard Configuration (from AirVPN Config Generator)
# Generate at: https://airvpn.org/generator/
WIREGUARD_PRIVATE_KEY=your_private_key_here
WIREGUARD_PRESHARED_KEY=your_preshared_key_here
WIREGUARD_ADDRESSES=10.x.x.x/32

# Server location
SERVER_COUNTRIES=United States
